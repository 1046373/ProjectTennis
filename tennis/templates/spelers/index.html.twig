{% extends 'base.html.twig' %}

{% block title %}Spelers index{% endblock %}

{% block body %}
    <h1>Spelers index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Voornaam</th>
                <th>Tussenvoegsels</th>
                <th>Achternaam</th>
                <th>Schoolnaam</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for speler in spelers %}
            <tr>
                <td>{{ speler.id }}</td>
                <td>{{ speler.Voornaam }}</td>
                <td>{{ speler.Tussenvoegsels }}</td>
                <td>{{ speler.Achternaam }}</td>
                <td>{{ speler.Schoolnaam }}</td>
                <td>
                    <a href="{{ path('app_spelers_show', {'id': speler.id}) }}">show</a>
                    <a href="{{ path('app_spelers_edit', {'id': speler.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_spelers_new') }}">Create new</a>
{% endblock %}
